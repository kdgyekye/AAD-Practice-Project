<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.SubmitActivity">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="editTextStyle">@style/SubmitActivityEditTextStyle</item>
    </style>
    <style name="SubmitActivityEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">#717171</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

</resources>
